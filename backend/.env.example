# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=esp8266_platform
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Database Pool Settings
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=app.log
LOG_QUERIES=false

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Telegram Configuration (for Telegram alerts)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Default Admin User (created on first startup)
DEFAULT_ADMIN_PASSWORD=admin123

# File Upload Configuration
MAX_UPLOAD_SIZE=50mb
UPLOAD_PATH=uploads/

# OTA Configuration
OTA_BASE_URL=https://your-domain.com/firmware
OTA_STORAGE_PATH=uploads/firmware/

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# MQTT Configuration (Optional)
# Set to 'false' to disable MQTT broker
MQTT_ENABLED=true
# MQTT broker URL (e.g., mqtt://localhost:1883 or mqtts://broker.example.com:8883)
MQTT_BROKER_URL=mqtt://localhost:1883
# MQTT authentication (optional)
MQTT_USERNAME=
MQTT_PASSWORD=
# Default MQTT topic prefix for devices
MQTT_TOPIC_PREFIX=iot
# Default MQTT QoS level (0, 1, or 2)
MQTT_DEFAULT_QOS=1